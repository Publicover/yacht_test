<center>
<br>
<h1>ALL THE RESERVATIONS</h1>

<table>

  <tr>
    <th>First Name One</th>
    <th>First Name Two</th>
    <th>Specialness</th>
  </tr>

  <% @reservations.each do |reservation| %>
    <tr>
      <td><%= reservation.first_name_one %></td>
      <td><%= reservation.first_name_two %></td>
      <td><%= reservation.specialness %></td>
      <td><%= link_to 'Show', reservation_path(reservation) %></td>
      <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
      <td><%= link_to 'Destroy', reservation_path(reservation),
              method: :delete,
              data: { confirm: 'OK, well, just be careful.' } %> </td>
    </tr>

  <% end %>

</table>
<br>

<%= link_to 'MAKE A NEW RESERVATION', new_reservation_path %>
